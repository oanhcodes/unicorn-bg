<div class="homepage-main">
<h2>Games</h2>
<div class="search-box">
<%= search_form_for @q do |f| %>
        <%= f.label "Search:" %>
        <%= f.search_field :name_or_description_or_categories_name_cont  %>
        <%= f.submit class: "button" %>
      <% end %>
</div>

<ul>
  <% @games.each do |game| %>
    <li class="game-listing"><%= link_to game.name.upcase, games_path, class: 'game_name' %></li>
  <% end %>
</ul>
</div>

<aside class="top-games">
  <h2>Top Games</h2>
</aside>
