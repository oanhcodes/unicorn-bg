<div class="homepage-main">
<h2>Games</h2>
<%= search_form_for @q do |f| %>
        <%= f.label "Search:" %>
        <%= f.search_field :title_or_description_or_categories_name_cont  %>
        <%= f.submit %>
      <% end %>
<ul>
  <% @games.each do |game| %>
    <li class="game-listing"><%= link_to game.title.upcase, games_path, class: 'game_title' %></li>
  <% end %>
</ul>
</div>

<aside class="top-games">
  <h2>Top Games</h2>
</aside>