<div class="homepage-main">
  <h2>Games</h2>
  <div class="search-box">
  <%= search_form_for @q do |f| %>
          <%= f.label "Search:" %>
          <%= f.search_field :name_or_description_or_categories_name_cont  %>
          <%= f.submit class: "button" %>
        <% end %>
  </div>

  <ul class="game-list">
    <% @games.each do |game| %>
      <%= render partial: "thumbnail", locals: {game: game} %>
    <% end %>
  </ul>
</div>

<aside class="top-games">
  <h2>Top Games</h2>
</aside>